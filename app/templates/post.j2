{% extends "base.j2" %}

{% block content %}
    <h2>Post</h2>
    <form action="" method="post">
        {{ form.hidden_tag() }}
        <p>
            {{ form.body.label }}<br>
            {{ form.body(size=50) }}<br>
            {% for error in form.body.errors %}
                <span class="err-msg">{{ error }}</span>
            {% endfor %}
        </p>
        <p>{{ form.submit() }}</p>
    </form>
{% endblock %}